{
  "manifest_version": 3,
  "name": "IP Highlighter Extension",
  "version": "1.1.0",
  "description": "Automatically annotates IP addresses with their country codes on certain pages.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "homepage_url": "https://github.com/thejjw/ip-highlighter-extension",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gall.dcinside.com/*",
        "https://mlbpark.donga.com/*",
        "https://namu.wiki/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
